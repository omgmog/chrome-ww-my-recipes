{
    "manifest_version": 2,
    "name": "WW NUI My Recipes",
    "description": "This extension provides a menu to easily browse all of your recipes",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
       "tabs",
       "http://cmx.weightwatchers.co.uk/*",
       "https://cmx.weightwatchers.co.uk/*"
    ],
    "page_action": {
        "default_title": "Browse My Recipes",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon_med.png",
        "128": "icon_big.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cmx.weightwatchers.co.uk; object-src 'self'"
}
